<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Development Team"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/orange_700"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"/>

        <!-- Members Grid Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Member 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imageMember1"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:background="@android:color/darker_gray"
                        android:contentDescription="Member 1"
                        android:padding="4dp"/>

                    <TextView
                        android:id="@+id/textName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nur Hidayah Binti Rosdi"
                        android:textColor="@color/orange_700"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:maxWidth="150dp"/>

                    <TextView
                        android:id="@+id/textMatric1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2023367787"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/textPosition1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Position"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:maxWidth="150dp"/>
                </LinearLayout>

                <!-- Member 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imageMember2"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:background="@android:color/darker_gray"
                        android:contentDescription="Member 2"
                        android:padding="4dp"/>

                    <TextView
                        android:id="@+id/textName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intan Asmiera Binti Jamaluddin"
                        android:textColor="@color/orange_700"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:maxWidth="150dp"/>

                    <TextView
                        android:id="@+id/textMatric2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2023367877"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/textPosition2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Position"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:maxWidth="150dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Second Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="16dp">

                <!-- Member 3 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imageMember3"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:background="@android:color/darker_gray"
                        android:contentDescription="Member 3"
                        android:padding="4dp"/>
                    <TextView
                        android:id="@+id/textName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hani Nurhafizah Binti Chek Azis"
                        android:textColor="@color/orange_700"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:maxWidth="150dp"/>

                    <TextView
                        android:id="@+id/textMatric3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2023371613"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/textPosition3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Position"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:maxWidth="150dp"/>
                </LinearLayout>

                <!-- Member 4 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imageMember4"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:background="@android:color/darker_gray"
                        android:contentDescription="Member 4"
                        android:padding="4dp"/>

                    <TextView
                        android:id="@+id/textName4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ainun Shahirah Binti Che Derahman"
                        android:textColor="@color/orange_700"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:maxWidth="150dp"/>

                    <TextView
                        android:id="@+id/textMatric4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2023437484"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/textPosition4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Position"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:maxWidth="150dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- View on GitHub Button -->
        <Button
            android:id="@+id/btnGitHub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View on GitHub"
            android:textColor="@color/white"
            android:backgroundTint="@color/orange_700"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"/>
        <TextView
            android:id="@+id/textCopyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â© 2026 BookstoreFinder. All rights reserved."
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />
    </LinearLayout>
</ScrollView>