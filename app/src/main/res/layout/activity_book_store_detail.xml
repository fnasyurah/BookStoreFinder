<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:textColor="#000000"/>
        <!-- Store Name (Big and Centered) -->
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bookstore Name"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/purple_700"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>

        <!-- Rating -->
        <TextView
            android:id="@+id/textViewRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â­ Rating: 4.5/5"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp"/>

        <!-- Address Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Address"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123 Bookstore Street, Kuala Lumpur"
            android:textSize="15sp"
            android:padding="14dp"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/blue_600"/>

        <!-- Phone Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ž Phone"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+603-12345678"
            android:textSize="15sp"
            android:padding="14dp"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="20dp"/>

        <!-- Opening Hours -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ•’ Opening Hours"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewOpeningHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mon-Sat: 10:00 AM - 10:00 PM"
            android:textSize="15sp"
            android:padding="14dp"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="20dp"/>

        <!-- Action Buttons (Proper Size) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/buttonCall"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="ðŸ“ž CALL"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@color/purple_500"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"
                android:padding="8dp"/>

            <Button
                android:id="@+id/buttonBack"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="BACK"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@color/teal_700"
                android:textColor="@color/white"
                android:padding="8dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>