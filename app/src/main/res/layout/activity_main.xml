<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header Section with Logout Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:elevation="4dp">

        <TextView
            android:id="@+id/textWelcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Welcome, "
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/btnLogout"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_logout"
            android:contentDescription="Logout"
            app:tint="@color/black" />
    </LinearLayout>

    <!-- Logo/Image in Center -->
    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/bookstorefinder"
        android:contentDescription="BookStore Finder Logo"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"/>

    <!-- App Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BookStore Finder"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/brand_blue"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"/>

    <!-- Menu Items (Vertical List like in the image) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        android:layout_marginBottom="40dp">

        <!-- EXPLORE NEARBY STORES Button -->
        <Button
            android:id="@+id/btnNearby"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="EXPLORE NEARBY STORES"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/brand_blue"
            android:layout_marginBottom="20dp"/>

        <!-- BOOK SCANNER Button -->
        <Button
            android:id="@+id/btnScanner"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="BOOK SCANNER"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/brand_blue"
            android:layout_marginBottom="20dp"/>

        <!-- COMMUNITY REVIEWS Button -->
        <Button
            android:id="@+id/btnReviews"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="COMMUNITY REVIEWS"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/brand_blue"
            android:layout_marginBottom="20dp"/>

        <!-- ABOUT US Button -->
        <Button
            android:id="@+id/btnAbout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="ABOUT US"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/brand_blue"/>
    </LinearLayout>

</LinearLayout>